{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "AdminUser": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "email",
        "password"
      ]
    },
    "Customer": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "cpf": {
          "type": "string"
        },
        "phoneNumber": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "lastSmoothieAwardRound": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time"
        },
        "lastCommonAwardRound": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time"
        },
        "purchase": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Purchase"
          }
        },
        "award": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Award"
          }
        }
      },
      "required": [
        "name",
        "email",
        "cpf",
        "phoneNumber"
      ]
    },
    "Purchase": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "type": {
          "type": "string",
          "enum": [
            "smoothie",
            "suplemento"
          ]
        },
        "amount": {
          "type": "number"
        },
        "customer": {
          "$ref": "#/definitions/Customer"
        }
      },
      "required": [
        "type",
        "amount",
        "customerId"
      ]
    },
    "Award": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "type": {
          "type": "string",
          "enum": [
            "smoothie",
            "suplemento"
          ]
        },
        "awardRoundStartedAt": {
          "type": "string",
          "format": "date-time"
        },
        "awardRoundEndedAt": {
          "type": "string",
          "format": "date-time"
        },
        "customer": {
          "$ref": "#/definitions/Customer"
        }
      },
      "required": [
        "type",
        "awardRoundStartedAt",
        "customerId"
      ]
    }
  },
  "type": "object",
  "properties": {
    "adminUser": {
      "$ref": "#/definitions/AdminUser"
    },
    "customer": {
      "$ref": "#/definitions/Customer"
    },
    "purchase": {
      "$ref": "#/definitions/Purchase"
    },
    "award": {
      "$ref": "#/definitions/Award"
    }
  }
}